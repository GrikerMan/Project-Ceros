# Set default behavior to automatically detect text files and normalize line endings
* text=auto

# Force LF endings for all Unity-related text assets
*.cs           text eol=lf
*.shader       text eol=lf
*.cginc        text eol=lf
*.hlsl         text eol=lf
*.compute      text eol=lf
*.uxml         text eol=lf
*.uss          text eol=lf
*.asmdef       text eol=lf
*.json         text eol=lf
*.xml          text eol=lf
*.txt          text eol=lf
*.md           text eol=lf
*.yml          text eol=lf
*.yaml         text eol=lf
*.asset        text eol=lf
*.meta         text eol=lf
*.unity        text eol=lf
*.prefab       text eol=lf
*.mat          text eol=lf

# FMOD
Assets/Plugins/FMOD/**/*.bundle text eol=lf
Assets/Plugins/FMOD/**/Info.plist text eol=lf

# Treat common binary files properly
*.dll          binary
*.exe          binary
*.png          binary
*.jpg          binary
*.jpeg         binary
*.mp3          binary
*.ogg          binary
*.wav          binary
*.fbx          binary
*.anim         binary
*.controller   binary
